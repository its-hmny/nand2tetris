class Cursor {
    field int row, col;
    field int startX, startY, cellSize;

    constructor Cursor new(int sx, int sy, int size) {
        let row = 0; let col = 0;
        let startX = sx; let startY = sy; let cellSize = size;
        
        return this;
    }

    method int getRow() { return row; }
    method int getCol() { return col; }

    method void move(int dr, int dc) {
        if (((row + dr) < 0) | ((row + dr) > 2)) { return; }
        if (((col + dc) < 0) | ((col + dc) > 2)) { return; }
        
        let row = row + dr; let col = col + dc;        
        
        return;
    }

    method void render() {
        var int x, y;
        let x = startX + (col * cellSize);
        let y = startY + (row * cellSize);
        
        do Screen.drawRectangle(x, y, x + cellSize, y + cellSize);
        
        return;
    }
}
